<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/fleetmanagement</property> <!-- ZMIEŃ NAZWE BAZY -->
        <property name="hibernate.connection.username">postgres</property> <!-- ZMIEŃ UŻYTKOWNIKA -->
        <property name="hibernate.connection.password">123</property> <!-- ZMIEŃ HASŁO -->

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Drop and re-create the database schema on startup (DO UŻYTKU ROZWOJOWEGO!) -->
        <!-- Zmień na "update" lub "validate" dla bardziej produkcyjnego użycia -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mapped entity classes -->
        <mapping class="com.example.fleetmanagement.model.Vehicle"/>
        <mapping class="com.example.fleetmanagement.model.Driver"/>
        <mapping class="com.example.fleetmanagement.model.Assignment"/>

    </session-factory>
</hibernate-configuration>