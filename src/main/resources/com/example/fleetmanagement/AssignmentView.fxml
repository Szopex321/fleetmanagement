<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fleetmanagement.controller.AssignmentController">
    <center>
        <TableView fx:id="assignmentTable" prefHeight="300.0" prefWidth="780.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="40.0" text="ID" />
                <TableColumn fx:id="vehicleColumn" prefWidth="180.0" text="Pojazd" />
                <TableColumn fx:id="driverColumn" prefWidth="150.0" text="Kierowca" />
                <TableColumn fx:id="startDateColumn" prefWidth="100.0" text="Od Kiedy" />
                <TableColumn fx:id="endDateColumn" prefWidth="100.0" text="Do Kiedy" />
                <TableColumn fx:id="destinationColumn" prefWidth="200.0" text="Cel Podróży" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <VBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS" prefWidth="200"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS" prefWidth="200"/>
                </columnConstraints>
                <Label text="Pojazd:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="vehicleComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="Infinity"/>

                <Label text="Kierowca:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <ComboBox fx:id="driverComboBox" GridPane.rowIndex="0" GridPane.columnIndex="3" prefWidth="Infinity"/>

                <Label text="Data Rozpoczęcia:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <DatePicker fx:id="startDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="Infinity"/>

                <Label text="Data Zakończenia:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <DatePicker fx:id="endDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="Infinity"/>

                <Label text="Cel Podróży:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="destinationField" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3"/>
            </GridPane>
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Button onAction="#handleAddAssignment" text="Dodaj" />
                <Button onAction="#handleEditAssignment" text="Edytuj" />
                <Button onAction="#handleDeleteAssignment" text="Usuń" />
                <Button onAction="#handleRefresh" text="Odśwież" />
                <Button onAction="#handleClearForm" text="Wyczyść Formularz" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>