<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fleetmanagement.controller.DriverController">
    <center>
        <TableView fx:id="driverTable" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="firstNameColumn" prefWidth="150.0" text="Imię" />
                <TableColumn fx:id="lastNameColumn" prefWidth="150.0" text="Nazwisko" />
                <TableColumn fx:id="licenseNumberColumn" prefWidth="200.0" text="Nr Prawa Jazdy" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button onAction="#handleAddDriver" text="Dodaj Kierowcę..." />
            <Button onAction="#handleEditDriver" text="Edytuj Zaznaczonego..." />
            <Button onAction="#handleDeleteDriver" text="Usuń Zaznaczonego" />
            <Button onAction="#handleRefresh" text="Odśwież Listę" />
        </HBox>
    </bottom>
</BorderPane>