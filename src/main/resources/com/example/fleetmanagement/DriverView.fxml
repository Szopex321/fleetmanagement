<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fleetmanagement.controller.DriverController">
    <center>
        <TableView fx:id="driverTable" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="firstNameColumn" prefWidth="150.0" text="Imię" />
                <TableColumn fx:id="lastNameColumn" prefWidth="150.0" text="Nazwisko" />
                <TableColumn fx:id="licenseNumberColumn" prefWidth="200.0" text="Nr Prawa Jazdy" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <VBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <GridPane hgap="10" vgap="5">
                <Label text="Imię:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Nazwisko:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Nr Prawa Jazdy:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="licenseNumberField" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
            </GridPane>
            <HBox spacing="10.0">
                <Button onAction="#handleAddDriver" text="Dodaj" />
                <Button onAction="#handleEditDriver" text="Edytuj" />
                <Button onAction="#handleDeleteDriver" text="Usuń" />
                <Button onAction="#handleRefresh" text="Odśwież" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>